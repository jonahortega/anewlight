  letter-spacing: 0.5px;
}

.event-modal-rsvp-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
}

.event-modal-share-btn {
  flex: 1;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  color: #667eea;
  border: 2px solid rgba(102, 126, 234, 0.25);
  padding: 14px 24px;
  border-radius: 12px;
  font-size: 0.9rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.event-modal-share-btn:hover {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
  border-color: rgba(102, 126, 234, 0.4);
  transform: translateY(-2px);
}

/* Responsive Design for Event Modal */
@media (max-width: 768px) {
  .event-modal {
    max-width: 95%;
    margin: 20px;
  }
  
  .event-modal-content {
    flex-direction: column;
  }
  
  .event-modal-image {
    max-width: 100%;
    height: 200px;
  }
  
  .event-modal-details {
    max-width: 100%;
    padding: 20px;
  }
  
  .event-modal-details-grid {
    grid-template-columns: 1fr;
    gap: 12px;
  }
  
  .event-modal-actions {
    flex-direction: column;
  }
  
  .event-modal-rsvp-btn,
  .event-modal-share-btn {
    width: 100%;
  }
}

/* Payment Modal Styles */
.payment-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  padding: 20px;
}

.payment-modal {
  background: white;
  border-radius: 16px;
  width: 90%;
  max-width: 500px;
  max-height: 90vh;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
}

.payment-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid #e2e8f0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.payment-modal-header h3 {
  margin: 0;
  font-size: 1.3rem;
  font-weight: 700;
}

.payment-modal-content {
  padding: 24px;
  overflow-y: auto;
  flex: 1;
}

.payment-event-info {
  margin-bottom: 24px;
  padding-bottom: 20px;
  border-bottom: 1px solid #e2e8f0;
}

.payment-event-info h4 {
  margin: 0 0 12px 0;
  font-size: 1.2rem;
  font-weight: 700;
  color: #1e293b;
}

.payment-event-info p {
  margin: 0 0 8px 0;
  font-size: 0.95rem;
  color: #64748b;
}

.payment-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16px;
  padding: 16px;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  border-radius: 12px;
  border: 1px solid #e2e8f0;
}

.amount-label {
  font-size: 1rem;
  font-weight: 600;
  color: #475569;
}

.amount-value {
  font-size: 1.3rem;
  font-weight: 800;
  color: #1e293b;
}

.payment-methods {
  margin: 20px 0;
}

.payment-method-option {
  display: flex;
  align-items: center;
  padding: 15px;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  margin-bottom: 10px;
  cursor: pointer;
  transition: all 0.3s ease;
  background: white;
}

.payment-method-option:hover {
  border-color: #007bff;
  background: #f8f9ff;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 123, 255, 0.15);
}

.payment-method-option.selected {
  border-color: #007bff;
  background: #f0f8ff;
  box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
}

.payment-method-icon {
  font-size: 2rem;
  margin-right: 15px;
  width: 40px;
  text-align: center;
}

.payment-method-text {
  font-size: 1.1rem;
  font-weight: 500;
  color: #333;
}

.payment-form {
  margin-bottom: 24px;
}

.form-group {
  margin-bottom: 16px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: #374151;
  font-size: 0.9rem;
}

.form-group input {
  width: 100%;
  padding: 12px 16px;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 1rem;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.form-group input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.payment-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
}

.pay-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 14px 28px;
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.pay-btn:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
}

.pay-btn.disabled {
  background: #cbd5e1;
  cursor: not-allowed;
  opacity: 0.6;
}

.pay-btn.disabled:hover {
  transform: none;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.cancel-btn {
  background: #f1f5f9;
  color: #64748b;
  border: 2px solid #e2e8f0;
  padding: 14px 28px;
  border-radius: 12px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cancel-btn:hover {
  background: #e2e8f0;
  color: #475569;
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .payment-modal {
    width: 95%;
    margin: 20px;
  }
  
  .payment-modal-content {
    padding: 20px;
  }
  
  .form-row {
    grid-template-columns: 1fr;
    gap: 12px;
  }
  
  .payment-actions {
    flex-direction: column;
  }
  
  .pay-btn,
  .cancel-btn {
    width: 100%;
  }
}