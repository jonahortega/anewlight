/* Request Popup Styles */
.request-popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.request-popup {
  background: white;
  border-radius: 12px;
  width: 90%;
  max-width: 500px;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
}

.request-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #dbdbdb;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.request-popup-header h3 {
  margin: 0;
  font-size: 1.1rem;
  font-weight: 600;
}

.popup-close-btn {
  background: none;
  border: none;
  color: white;
  font-size: 1.5rem;
  cursor: pointer;
  padding: 0;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s;
}

.popup-close-btn:hover {
  background: rgba(255, 255, 255, 0.2);
}

.request-popup-content {
  padding: 20px;
  overflow-y: auto;
  flex: 1;
  max-height: calc(80vh - 120px);
}

.request-org-info {
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid #f0f0f0;
}

.request-org-info h4 {
  margin: 0 0 5px 0;
  font-size: 1.2rem;
  font-weight: 600;
  color: #262626;
}

.request-org-type {
  margin: 0;
  font-size: 0.9rem;
  color: #8e8e8e;
}

.request-form label {
  display: block;
  margin-bottom: 8px;
  font-weight: 600;
  color: #262626;
  font-size: 0.95rem;
}

.request-message-input {
  width: 100%;
  padding: 12px;
  border: 1px solid #dbdbdb;
  border-radius: 8px;
  font-size: 0.9rem;
  font-family: inherit;
  resize: vertical;
  min-height: 100px;
  transition: border-color 0.2s;
}

.request-message-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.1);
}

.request-message-input::placeholder {
  color: #8e8e8e;
}

.request-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  margin-top: 20px;
}

.request-actions .btn {
  padding: 10px 20px;
  font-size: 0.9rem;
  font-weight: 600;
}

.request-actions .btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Responsive adjustments for request popup */
@media (max-width: 768px) {
  .request-popup {
    width: 95%;
    margin: 20px;
  }
  
  .request-popup-content {
    padding: 16px;
  }
  
  .request-actions {
    flex-direction: column;
  }
  
  .request-actions .btn {
    width: 100%;
  }
}

